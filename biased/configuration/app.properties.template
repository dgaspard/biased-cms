# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------

# @var APP_NAME
# @type string
# @required true
# @description The name of your application
# @example MyApp, API Service, Customer Portal
# @validation Non-empty string, alphanumeric with spaces/hyphens
APP_NAME=<your_application_name>

# @var APP_VERSION
# @type string
# @required false
# @description Semantic version of the application
# @example 1.0.0, 2.1.3-beta
# @default 1.0.0
# @validation Semantic versioning format (MAJOR.MINOR.PATCH)
APP_VERSION=1.0.0

# @var ENVIRONMENT
# @type enum
# @required true
# @description Deployment environment
# @options development, staging, production
# @validation Must be one of: development, staging, production
ENVIRONMENT=<development|staging|production>

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------

# @var DATABASE_HOST
# @type string
# @required true
# @description Database server hostname or IP address
# @example localhost, db.example.com, 192.168.1.100
# @validation Valid hostname or IP address
# @related DATABASE_PORT, DATABASE_NAME
DATABASE_HOST=<database_host_url>

# @var DATABASE_PORT
# @type integer
# @required true
# @description Database server port number
# @options 5432 (PostgreSQL), 3306 (MySQL), 1433 (SQL Server), 27017 (MongoDB)
# @validation 1-65535
# @related DATABASE_HOST
DATABASE_PORT=<5432|3306|1433|27017>

# @var DATABASE_NAME
# @type string
# @required true
# @description Name of the database/schema
# @example myapp_db, production_database
# @validation Non-empty string, database naming conventions
DATABASE_NAME=<database_name>

# @var DATABASE_USER
# @type string
# @required true
# @description Database username for authentication
# @example db_user, admin
# @validation Non-empty string
# @related DATABASE_PASSWORD
DATABASE_USER=<database_username>

# @var DATABASE_PASSWORD
# @type string
# @required true
# @description Database password (SENSITIVE - do not commit)
# @example Use strong password, consider secrets manager
# @validation Minimum 12 characters recommended
# @security SENSITIVE - Use environment variables or secrets manager
# @related DATABASE_USER
DATABASE_PASSWORD=<database_password>

# @var DATABASE_POOL_MIN
# @type integer
# @required false
# @description Minimum number of database connections in pool
# @default 2
# @validation Positive integer, less than DATABASE_POOL_MAX
# @related DATABASE_POOL_MAX
DATABASE_POOL_MIN=2

# @var DATABASE_POOL_MAX
# @type integer
# @required false
# @description Maximum number of database connections in pool
# @default 10
# @validation Positive integer, greater than DATABASE_POOL_MIN
# @related DATABASE_POOL_MIN
DATABASE_POOL_MAX=10

# ----------------------------------------------------------------------------
# API CONFIGURATION
# ----------------------------------------------------------------------------

# @var API_BASE_URL
# @type url
# @required true
# @description Base URL for external API endpoints
# @example https://api.example.com, https://api.staging.example.com
# @validation Valid HTTPS URL
# @related API_KEY, API_SECRET
API_BASE_URL=<https://api.example.com>

# @var API_KEY
# @type string
# @required true
# @description API authentication key (SENSITIVE - do not commit)
# @example abc123xyz456
# @validation Non-empty string
# @security SENSITIVE - Use environment variables or secrets manager
# @related API_SECRET
API_KEY=<your_api_key>

# @var API_SECRET
# @type string
# @required true
# @description API secret key (SENSITIVE - do not commit)
# @example secret_abc123xyz456
# @validation Non-empty string
# @security SENSITIVE - Use environment variables or secrets manager
# @related API_KEY
API_SECRET=<your_api_secret>

# @var API_TIMEOUT_SECONDS
# @type integer
# @required false
# @description API request timeout in seconds
# @default 30
# @validation Positive integer, recommended 10-60
API_TIMEOUT_SECONDS=30

# ----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# ----------------------------------------------------------------------------

# @var JWT_SECRET
# @type string
# @required true
# @description Secret key for JWT token signing (SENSITIVE - do not commit)
# @example Use cryptographically secure random string (min 32 characters)
# @validation Minimum 32 characters, cryptographically random
# @security CRITICAL - Use environment variables or secrets manager, rotate regularly
JWT_SECRET=<your_jwt_secret_key>

# @var SESSION_SECRET
# @type string
# @required true
# @description Secret for session encryption (SENSITIVE - do not commit)
# @example Use cryptographically secure random string (min 32 characters)
# @validation Minimum 32 characters, cryptographically random
# @security CRITICAL - Use environment variables or secrets manager
SESSION_SECRET=<your_session_secret>

# @var ENCRYPTION_KEY
# @type string
# @required false
# @description Key for data encryption at rest (SENSITIVE - do not commit)
# @example 256-bit key in base64 or hex format
# @validation Depends on encryption algorithm (AES-256 recommended)
# @security CRITICAL - Use secrets manager, implement key rotation
ENCRYPTION_KEY=<your_encryption_key>

# @var ACCESS_TOKEN_EXPIRY
# @type integer
# @required false
# @description Access token lifetime in seconds
# @default 3600
# @example 3600 (1 hour), 1800 (30 minutes)
# @validation Positive integer, recommended 900-3600
# @related REFRESH_TOKEN_EXPIRY
ACCESS_TOKEN_EXPIRY=3600

# @var REFRESH_TOKEN_EXPIRY
# @type integer
# @required false
# @description Refresh token lifetime in seconds
# @default 604800
# @example 604800 (7 days), 2592000 (30 days)
# @validation Positive integer, must be > ACCESS_TOKEN_EXPIRY
# @related ACCESS_TOKEN_EXPIRY
REFRESH_TOKEN_EXPIRY=604800

# ----------------------------------------------------------------------------
# SERVICE ENDPOINTS
# ----------------------------------------------------------------------------

# @var EMAIL_SERVICE_URL
# @type string
# @required false
# @description SMTP server hostname for email service
# @example smtp.gmail.com, smtp.sendgrid.net
# @validation Valid hostname
# @related EMAIL_SERVICE_PORT, EMAIL_FROM_ADDRESS
EMAIL_SERVICE_URL=<smtp.example.com>

# @var EMAIL_SERVICE_PORT
# @type integer
# @required false
# @description SMTP server port
# @options 25 (unencrypted), 587 (TLS), 465 (SSL)
# @default 587
# @validation Common ports: 25, 465, 587
# @related EMAIL_SERVICE_URL
EMAIL_SERVICE_PORT=587

# @var EMAIL_FROM_ADDRESS
# @type string
# @required false
# @description Default sender email address
# @example noreply@example.com, support@example.com
# @validation Valid email format
# @related EMAIL_SERVICE_URL
EMAIL_FROM_ADDRESS=<noreply@example.com>

# @var PAYMENT_GATEWAY_URL
# @type url
# @required false
# @description Payment processing gateway URL
# @example https://api.stripe.com, https://api.paypal.com
# @validation Valid HTTPS URL
# @related PAYMENT_API_KEY
PAYMENT_GATEWAY_URL=<https://payment.example.com>

# @var PAYMENT_API_KEY
# @type string
# @required false
# @description Payment gateway API key (SENSITIVE - do not commit)
# @example pk_live_abc123, pk_test_xyz789
# @validation Non-empty string
# @security SENSITIVE - Use environment variables or secrets manager
# @related PAYMENT_GATEWAY_URL
PAYMENT_API_KEY=<payment_api_key>

